<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp">
    <TextView
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/textViewArticleType"
        android:text="@string/article_type"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/article_creation_time"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textViewArticleCreationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/textViewArticleType"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/textViewArticleName"
        android:text="@string/article_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>